<!DOCTYPE html>
<html>
<head>
  <title>Threesacloud</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="top-bar" data-topbar>
    <ul class="title-area">
      <li class="name">
        <h1><a href="/">Threesacloud</a></h1>
      </li>
    </ul>

    <section class="top-bar-section">
      <ul class="left">
        <li><a href="/weathers/new" class="">Add today's weather!</a></li>
      </ul>
      <ul class="right">

        <%- if current_user -%>
          <li><img src="<%= current_user.profile_photo %>" width="50" height="50"></li>
          <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
          <li><%= link_to 'Edit Profile', edit_user_registration_path(@user) %></li>
        <%- else -%>
          <li><%= link_to 'Sign Up', new_user_registration_path %></li>
          <li><%= link_to 'Sign In', new_user_session_path %></li>
        <%- end -%>
      </ul>
    </section>
  </nav>
  <div class ="row">
    <div class="large-3 columns ">
      <div class="panel">
        <a href="#"><img src="http://placehold.it/300x240&text=[img]"/></a>
        <h5><a href="#">Your Name</a></h5>
        <div class="section-container vertical-nav" data-section data-options="deep_linking: false; one_up: true">
          <section class="section">
            <h5 class="title"><a href="#">Section 1</a></h5>
          </section>
          <section class="section">
            <h5 class="title"><a href="#">Section 2</a></h5>
          </section>
          <section class="section">
            <h5 class="title"><a href="#">Section 3</a></h5>
          </section>
        </div>
      </div>
    </div>
    <div class="large-9 columns">
      <div class="row">

    <%= yield %>

    <%= javascript_include_tag 'application' %>
    <%= javascript_tag do %>
    $(function(){
      $(document).foundation();
    });
    <% end %>
    <%= yield :extra_footer %>
  </div>
</div>

  </div>
  <%- flash.each do |key, value| -%>
    <div class="flash flash-<%= key %>">
      <%= value %>
    </div>
  <%- end -%>



</body>
</html>
