<div class="large-6 columns">
  <div class="row">
    <% if @weather.errors.any? %>
      <% @weather.errors.full_messages.each do |msg| %>
        <%= msg %>
      <% end %>
    <% end %>
<%= form_for @weather do |f| %>

    <%= f.label :city, 'City' %>
    <%= f.text_field :city %>

    <%= f.label :state, 'State' %>
    <%= f.select :state, options_for_select(us_states) %>

    <%= f.submit 'Create New Weather', :class => "button tiny" %>

<% end %>

<div><a href="/weathers">Back</a></div>
</div>
</div>
